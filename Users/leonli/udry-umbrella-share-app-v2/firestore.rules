rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access for stalls so the map can load them for anyone.
    // Writes are restricted to prevent tampering with stall data.
    match /stalls/{stallId} {
      allow read: if true;
      allow write: if false; // Protect stall data from public modification
    }

    // Users can only read and write their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Completed rental histories can be created by authenticated users.
    // Reading rental history might be restricted in the future (e.g., only by user or admin).
    match /rentals/{rentalId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false; // Prevent modification of historical records
    }
     // Processed Stripe payments should only be handled by server-side logic (Cloud Functions).
    // This collection is used for idempotency checks.
    match /processed_stripe_payments/{sessionId} {
      allow read, write: if false; // No client-side access
    }
  }
}
