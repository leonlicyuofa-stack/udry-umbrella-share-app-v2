
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Stalls: Publicly readable, but only admins can write.
    // This allows the map to load for all users.
    match /stalls/{stallId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
    }

    // Users: Can only be read or written by the authenticated user themselves, or by an admin.
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == 'admin@u-dry.com');
    }

    // Rentals (History): Can only be created by the user. Readable by the user or an admin. Cannot be updated or deleted.
    match /rentals/{rentalId} {
      allow read: if request.auth != null && (request.resource.data.userId == request.auth.uid || request.auth.token.email == 'admin@u-dry.com');
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Processed Payments: Internal collection, should not be client-accessible for reads.
    // Creation is handled by backend functions.
    match /processed_stripe_payments/{sessionId} {
      allow read, write: if false;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
