
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Stalls are public information for the map
    match /stalls/{stallId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
    }

    // Users can read/write their own data. Admins can read/write any user data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
    }

    // Rental history can only be created by authenticated users. Admins can read all rental history.
    match /rentals/{rentalId} {
      allow read: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
      allow create: if request.auth != null;
    }

    // Processed Stripe payments are write-only for security (written by cloud functions)
    // Admins can read them for debugging purposes.
    match /processed_stripe_payments/{sessionId} {
        allow read: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
        allow write: if false; // Only backend functions can write here
    }
  }
}
