
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Stalls are public information for the map.
    match /stalls/{stallId} {
      allow read: if true;
      // Write access should be restricted to admin functions (not client).
      allow write: if false; 
    }

    // Users can manage their own data.
    // The admin user can list all user documents for the admin panel.
    match /users/{userId} {
      allow get, update: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
      // Prevent non-admins from creating other user documents
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Rental history should only be listable by the admin user for now.
    // In the future, rules could be added to allow users to see their own history.
    match /rentals/{rentalId} {
      allow read, write: if false; // Users cannot directly read/write history
      allow list: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
    }
  }
}
