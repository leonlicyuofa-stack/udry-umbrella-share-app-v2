rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Publicly readable collection for stalls
    match /stalls/{stallId} {
      allow read;
      // Allow write only for authenticated admins
      allow write: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Users can only read and write their own document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Admins can list all users
    match /users/{document=**} {
       allow list: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins can list all rentals
    match /rentals/{document=**} {
       allow list: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // **NEW RULE**: Allow any authenticated user to read the admins collection.
    // This is safe because it only contains UIDs, no sensitive info.
    // This allows the app to check if the current user is an admin.
    match /admins/{adminId} {
      allow read: if request.auth != null;
    }
  }
}
