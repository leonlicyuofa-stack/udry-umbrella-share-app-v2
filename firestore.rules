rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    // Publicly readable stall information
    match /stalls/{stallId} {
      allow read: if true;
      allow write: if isAdmin(); // Only admins can update stall documents
    }

    // Users can manage their own data. Admins can list all users.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow list: if isAdmin(); // Admin can list users for the admin panel
    }
    
    // Processed payments are write-only for authenticated users and not readable.
    match /processed_stripe_payments/{paymentId} {
      allow read: if false;
      allow write: if request.auth != null;
    }

    // Rental history is only listable by admins for analytics.
    match /rentals/{rentalId} {
      allow read: if isAdmin(); // Could be restricted further later if needed
      allow list: if isAdmin();
      allow create: if request.auth != null; // Users create their own rental history
    }
  }
}
