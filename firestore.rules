rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admins can read all user and rental data for the dashboard.
    // Normal users can still only read their own data via the rule below.
    match /users/{userId} {
      allow read: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists;
      allow read, write: if request.auth.uid == userId;
    }

    match /rentals/{rentalId} {
      allow read: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists;
    }
    
    // --- Existing, working rules for Stalls ---
    // Any logged-in user can read stall data for the map and update counts during transactions.
    // Only admins can create new stalls.
    match /stalls/{stallId} {
      allow read, update: if request.auth != null;
      allow create: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists;
      allow delete: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists;
    }

    // A special collection to list who is an admin.
    match /admins/{userId} {
      allow read: if request.auth.uid == userId;
    }
  }
}
