rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Stalls are public for map display. Only admin can modify them.
    match /stalls/{stallId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
    }

    // Users can read/write their own data. Admin can list all users for the dashboard.
    match /users/{userId} {
      // Allows a user to get or update their own document.
      allow get, update: if request.auth != null && request.auth.uid == userId;
      // Allows the admin user to list all documents in the collection.
      allow list: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
      // Allows any authenticated user to create their own user document upon sign-up.
      allow create: if request.auth != null;
    }

    // Rental history is private. Only admin can list all rentals for the dashboard.
    match /rentals/{rentalId} {
      allow list, read: if request.auth != null && request.auth.token.email == 'admin@u-dry.com';
      // Note: Write access is handled by backend functions, so client-side write is not needed here.
    }
    
    // Processed Stripe payments should not be client-readable.
    match /processed_stripe_payments/{paymentId} {
      allow read, write: if false;
    }
  }
}
